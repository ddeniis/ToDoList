@model ToDoList.Models.Affair
@{
    ViewBag.Title = "Удаление задания";
}

<div>
    <dl class="dl-horizontal">
        <dt>Задание</dt>
        <dd>Вы уверены что хотите удалить задание?</dd>
        <dd>
            @Html.DisplayFor(model => model.Task)
        </dd>
    </dl>

    <div>
        <form asp-controller="Home" asp-action="Delete" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
    </div>
</div>