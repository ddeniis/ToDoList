@model IEnumerable<ToDoList.Models.Affair>
@{
    ViewBag.Title = "Список дел";
}
<a asp-action="Create">Добавить дело</a>
<table class="table">
    <tr><td>Список дел</td></tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Task</td>
            <td>
                <a asp-action="Edit" asp-controller="Home" asp-route-id="@item.Id">Изменить</a> |
                <a asp-action="Delete" asp-controller="Home" asp-route-id="@item.Id">Удалить</a> 
            </td>
        </tr>
    }
</table>