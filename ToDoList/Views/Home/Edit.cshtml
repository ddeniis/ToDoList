@model ToDoList.Models.Affair
@{
    ViewBag.Title = "Редактировать задание";
}
<form asp-action="edit" asp-controller="home" asp-route-id="@Model.Id">
    <div class="form-group">
        <label asp-for="Task" class="control-label">Задание</label>
        <input type="text" asp-for="Task" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-default" />
    </div>
</form>